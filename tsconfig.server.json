{
  "extends": "./tsconfig.node.json",
  "compilerOptions": {
    "outDir": "dist/server",
    "noEmit": false,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": false,
    "esModuleInterop": true,
    "composite": false,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "NodeNext"
    }
  },
  "include": ["server/**/*.ts"],
  "compilerOptions": {
    "preserveSymlinks": true
  }
}